{
    "name": "crazynds/query-pipeline",
    "description": "A query pipeline for use with custom search in Laravel project.",
    "keywords": [
        "crazynds",
        "laravel",
        "query-pipeline"
    ],
    "homepage": "https://github.com/crazynds/QueryPipeline-Laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "crazynds",
            "email": "lhlago@inf.ufsm.br",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^9.0",
        "illuminate/support": "^9.0",
        "spatie/laravel-package-tools": "^1.9.2"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Crazynds\\QueryPipeline\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Crazynds\\QueryPipeline\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "pestphp/pest": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Crazynds\\QueryPipeline\\QueryPipelineServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}